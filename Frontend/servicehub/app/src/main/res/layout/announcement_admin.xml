<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
android:id="@+id/announcementTextView"
app:layout_constraintBottom_toTopOf="@id/announcementEditText"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Announcement:"
android:textSize="18sp"
tools:layout_editor_absoluteX="126dp"
tools:layout_editor_absoluteY="16dp" />

<EditText
android:id="@+id/announcementEditText"
app:layout_constraintBottom_toTopOf="@id/submitButton"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/announcementTextView"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:hint="Enter your announcement here"
tools:layout_editor_absoluteX="79dp"
tools:layout_editor_absoluteY="54dp" />

<Button
android:id="@+id/submitButton"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/announcementEditText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Submit"
tools:layout_editor_absoluteX="159dp"
tools:layout_editor_absoluteY="116dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
