<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/id_carpool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/startLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Location"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/destinationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/capacityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/websocketMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebSocket Message: Waiting for update..."
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>


        <Button
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Carpool" />

        <Button
            android:id="@+id/RateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
